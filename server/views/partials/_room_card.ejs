<article class='card panel panel-default z-3'>
    <a href=<%= `/rooms/${classroom.room_key}` %>>
    <div class='panel-body card-body'>
    <span>
      <% if (classroom.language_id === 'javascript') { %>
        <span class="fa icon-javascript-alt language-icon-js" aria-hidden="true"></span>
      <% } %>
      <% if (classroom.language_id === 'ruby') { %>
        <span class="fa icon-ruby language-icon-ruby" aria-hidden="true"></span>
      <% } %>
      <% if (classroom.language_id === 'python') { %>
        <span class="fa icon-python language-icon-python" aria-hidden="true"></span>
      <% } %>
    </span>
      <h4 class="card-header">
        <%= classroom.topic %>
      </h4>
      <p class="card-moment"><%= moment(classroom.created_at).diff(moment(), 'days') < -5 ? moment(classroom.created_at).format('MMM Do YYYY') : moment(classroom.created_at).fromNow() %></p>
    </div>
    </a>
    <footer class='card-footer'>
      <a class="btn card-share" role="button" data-clipboard-text=<%= `rooms/${classroom.room_key}` %> >
        <i class="fa fa-clipboard"></i>
        Copy Link
      </a>
      <span class="fa fa-check text-success clipboard-check"></span>
    </footer>
</article>
